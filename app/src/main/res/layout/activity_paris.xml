<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5d6ff"
    tools:context=".most_popular.ParisActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/paris_activity_view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/praga_activity_tv_inf"
        android:layout_marginBottom="24dp"
       >

    </androidx.viewpager2.widget.ViewPager2>

    <TextView
        android:id="@+id/praga_activity_tv_inf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paris_activity_tv_informatii"
        android:textColor="#570b83"
        android:fontFamily="sans-serif-light"
        android:maxLines="12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/paris_activity_view_pager"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>