<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5d6ff"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <ImageView
            android:id="@+id/fav_country_activity_custom_image_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_place_24"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/fav_country_activity_custom_tv_nume_tara"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/fav_country_tv_tara"
            app:layout_constraintStart_toEndOf="@id/fav_country_activity_custom_image_place"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/fav_country_activity_custom_tv_nume_capitala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fav_country_tv_capitala"
            app:layout_constraintStart_toEndOf="@id/fav_country_activity_custom_tv_nume_tara"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            />



        <ImageView
            android:id="@+id/fav_country_activity_custom_image_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fav_country_activity_custom_image_place"
            android:src="@drawable/ic_baseline_attach_money_24"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/fav_country_activity_custom_tv_currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/fav_country_tv_moneda"
            app:layout_constraintStart_toEndOf="@id/fav_country_activity_custom_image_money"
            app:layout_constraintTop_toBottomOf="@id/fav_country_activity_custom_tv_nume_tara"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp" />



        <TextView
            android:id="@+id/fav_country_activity_custom_tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fav_country_tv_limba"
            app:layout_constraintStart_toEndOf="@id/fav_country_activity_custom_tv_currency"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>